<% if logged_in? %>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/dashboard">My Subjects</a>
      </div>



    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li> <%= link_to "All Mice", mice_path %> </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.first_name%> <%= current_user.last_name%><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "My Profile", root_path %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to "Logout", logout_path, method: :delete %></li>
          </ul>
        </li>
      </ul>

      <ul class="nav navbar-nav">
        <%= form_tag :search, method: :get do %>
        <div class="form-group search-field">
          <%= text_field_tag :search, "Search by mouse id" %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
        <% end %>
      </ul>

    <% else %>
      <%= link_to 'Login', login_path %>
    <% end %>

  </div>

  </div><!-- /.container-fluid -->
</nav>
