
<%= form_for @mouse do |f| %>
  <%= f.label :lab_id, 'Lab Id' %>
  <%= f.text_field :lab_id %></br></br>
  <%= f.label :ploidy, 'Ploidy' %>
  <%= f.select :ploidy, Mouse.distinct.pluck(:ploidy) %></br></br>
  <%= f.label :diet, 'Diet' %>
  <%= f.select :diet, Mouse.distinct.pluck(:diet) %></br></br>
  <%= f.label :color, 'Color' %>
  <%= f.select :color, ["black", "agouti"] %></br></br>
  <%= f.label :sex, 'Sex' %>
  <%= f.select :sex, ["male", "female"] %></br></br>
  <%= f.label :group_number, 'Group Number' %>
  <%= f.select :group_number, Mouse.distinct.pluck(:group_number) %></br></br>
  <%= f.label :date_of_birth, 'Date of Birth' %>
  <%= f.date_select :date_of_birth, prefix: 'raw_date_of_birth', use_short_month: true, order: [:month, :day, :year] %></br></br>
  <%= f.label :experiment_start_date, 'Experiment Start Date' %>
  <%= f.date_select :experiment_start_date, prefix: 'raw_experiment_start_date', use_short_month: true, order: [:month, :day, :year] %></br></br>
  <%= f.submit 'Add Mouse' %>
<% end %>
