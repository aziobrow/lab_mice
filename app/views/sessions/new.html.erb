<div class='login'>
  <div class='login-card'>
    <h2 class='login-title'>Log In</h2>
    <div class='form'>
      <%= form_for :session, url: login_path do |f| %>
        <%= f.email_field :email, placeholder: "Email" %></br></br>
        <%= f.password_field :password, placeholder: "Password" %></br></br>
        <%= f.submit 'Login'%><br></br>
        Not registered?</br>
        <%= link_to 'Create Account', new_user_path %></div>
      </div></br>
    <% end %>

  <div class="google-button">
    <%= image_tag('google_logo.png', size: "20x20", class: 'google-logo') %>
    <%= link_to("Login with Google", '/auth/google_oauth2', class: 'button-text') %>
  </div>

</div>
